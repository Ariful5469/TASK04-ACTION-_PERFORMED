<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Books World</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyLibrary.styles.css" asp-append-version="true" />
    <style>
        /* Custom styles for a modern and digital design */
        body {
            font-family: 'Arial', sans-serif;
            background: #f4f7f6;
            color: #333;
        }

        .navbar {
            background: linear-gradient(90deg, #00bcd4 0%, #8e2de2 100%);
            border-bottom: 2px solid #d9d9d9;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.75rem;
            color: #fff;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
        }

        .navbar-nav .nav-item .nav-link {
            background-color: #00bcd4;
            border: 1px solid #00bcd4;
            border-radius: 5px;
            color: #fff;
            padding: 0.5rem 1rem;
            margin: 0.25rem;
            font-size: 1.2rem;
            font-weight: bold;
            text-align: center;
            transition: background-color 0.3s ease, border-color 0.3s ease;
        }

            .navbar-nav .nav-item .nav-link:hover {
                background-color: #008c95;
                border-color: #008c95;
            }

        .dropdown-menu .dropdown-item {
            background-color: #00bcd4;
            border: 1px solid #00bcd4;
            border-radius: 5px;
            color: #fff;
            margin: 0.25rem;
            font-size: 1.1rem;
            font-weight: bold;
            text-align: center;
            padding: 0.5rem 1rem;
            transition: background-color 0.3s ease, border-color 0.3s ease;
        }

            .dropdown-menu .dropdown-item:hover {
                background-color: #008c95;
                border-color: #008c95;
            }

        .hero-section {
            background: linear-gradient(135deg, rgba(0, 123, 255, 0.65), rgba(0, 201, 255, 0.65)), url('https://cdn.pixabay.com/photo/2024/04/19/12/13/ai-generated-8706226_640.png') no-repeat center center;
            background-size: cover;
            height: 90vh;
            color: white;
            text-align: center;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            border-bottom: 5px solid #ffeb3b;
            filter: brightness(95%);
        }

            .hero-section.hidden {
                display: none;
            }

            .hero-section::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.4);
                z-index: 1;
            }

        .hero-content {
            z-index: 2;
            max-width: 600px;
        }

            .hero-content h1 {
                font-size: 4rem;
                margin-bottom: 1rem;
                color: #ffeb3b;
                text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.5);
                background: linear-gradient(90deg, #ff0066, #00ff66, #0066ff);
                background-size: 300%;
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                animation: moveColors 5s ease infinite;
            }

            .hero-content p {
                font-size: 1.75rem;
                color: #ffffff;
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
            }

        .btn-primary {
            background-color: #ff5722;
            border-color: #ff5722;
            font-size: 1.5rem;
            padding: 1rem 2rem;
            transition: background-color 0.3s ease, border-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #e64a19;
                border-color: #e64a19;
            }

        .footer {
            background-color: #212121;
            color: #fff;
            padding: 1rem 0;
            text-align: center;
            border-top: 5px solid #ffeb3b;
        }

            .footer a {
                color: #ffeb3b;
                text-decoration: none;
                font-weight: bold;
            }

                .footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">User</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        
                        <!-- Admin Panel Dropdown Menu -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="adminPanelDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Registered User
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="adminPanelDropdown">
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index">Manage Users</a></li>
                                
                            </ul>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- Hero Section with conditional visibility -->
    <section class="hero-section @(ViewData["ShowHeroSection"] == null ? "hidden" : "")">
        <div class="hero-content">
           
        </div>
    </section>

    <div class="container my-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if (ViewData["Title"] as string != "Privacy")
    {
        <footer class="footer text-muted">
            <div class="container">
                &copy; 2024 - MyLibrary - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
